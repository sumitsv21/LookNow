<br>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4" style="text-align:center;border:1px solid #ddd;padding:20px;">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "login-form"}) do |f| %>
				<h4>Sign In</h4>
				<a href="/users/auth/twitter" class="btn btn-primary">Sign In via Twitter</a><br><br>
			  <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address" %><br>
			  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %><br>
			  <%= f.submit "Sign In", :class => "btn btn-success" %><br>
			  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %><br>
			    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "bs-light" %><br>
			  <% end -%>
			<% end %>
		</div>
	</div>
</div>
