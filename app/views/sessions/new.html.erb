	<div class="col-sm-12">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "login-form"}) do |f| %>
		<div class="col-sm-12">
		  <%= f.email_field :email, :class => "form-name", :placeholder => "Email Address" %>
		</div>
		<div class="col-sm-12">
		  <%= f.password_field :password, :class => "form-name", :placeholder => "Password" %>
		</div>
		<div class="col-sm-12">
		  <%= f.submit "Sign In", :class => "btn" %>
		</div>
		<div class="col-sm-12">
		  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
		    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "bs-light" %>
		  <% end -%>
		</div>
		<% end %>
	</div>
