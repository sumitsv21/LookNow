  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<div id="user-sign-up-errors" class="alert alert-error" style="display: none;"></div>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "register"}) do |f| %><br>
				<div class="container">
					<div class="row">
						<div class="col-md-4 col-md-offset-4" style="text-align:center;border:1px solid #ddd;padding:20px;">
							<h5>Oops! We need you email too</h5>
							<%= f.email_field :email, :class => "form-control", :placeholder => "Email Address" %><br>
							<input type="submit" value="Sign Up" class="btn btn-primary">
						</div>
					</div>
				</div>
			<% end %>
	<% end %>